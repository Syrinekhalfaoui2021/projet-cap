@model CAP.Data.DW
@using Microsoft.AspNetCore.Identity
@using CAP.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ ViewData["Title"] = "Create"; }

<h4>DW Model Form</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEditModelsAC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Code" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">

                    <label asp-for="Brand.Namebrand" class="control-label"></label>

                    <select asp-for="Brandcodebrand" asp-items="ViewBag.brands" class="form-control"></select>

                    <span asp-validation-for="Brand.Namebrand" class="text-danger"></span>

                </div>


                <div class="form-group col-md-6">
                    <label asp-for="Encastrable" class="control-label"></label>
                    <input asp-for="Encastrable" class="form-control" />
                    <span asp-validation-for="Encastrable" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Color" class="control-label"></label>
                    <select asp-for="Color" asp-items="Html.GetEnumSelectList<Color>()" class="form form-control">
                    </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label asp-for="Display" class="control-label"></label>
                    <input asp-for="Display" class="form-control" />

                    <span asp-validation-for="Display" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Numberofcovers" class="control-label"></label>
                    <input asp-for="Numberofcovers" class="form-control" />

                    <span asp-validation-for="Numberofcovers" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">


                <div class="form-group col-md-6">
                    <label asp-for="Promgramme" class="control-label"></label>
                    <input asp-for="Promgramme" class="form-control" />
                    <span asp-validation-for="Promgramme" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Availibility" class="control-label"></label>
                    <select asp-for="Availibility" asp-items="Html.GetEnumSelectList<AV>()" class="form form-control">
                    </select>
                    <span asp-validation-for="Availibility" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Energeticefficiency" class="control-label"></label>
                    <input asp-for="Energeticefficiency" class="form-control" />
                    <span asp-validation-for="Energeticefficiency" class="text-danger"></span>
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="IndexModels" class="btn btn-block btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}